{
  "compilerOptions": {
    "composite": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2021",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "plugins": [{ "name": "typescript-plugin-toml" }],
    "strictNullChecks": true
  },
    "include": ["./src/**/*.ts", "./src/**/*.toml"],
    "exclude": ["node_modules"],
    "files": ["./src/test.toml"],
}